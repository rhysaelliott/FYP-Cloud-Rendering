#version 460

layout (local_size_x = 16, local_size_y = 16) in;

layout(r8, binding = 0) uniform image3D densityTex;


void main() 
{
    ivec3 pos = ivec3(gl_GlobalInvocationID.xyz);
    vec3 nPos = vec3(pos) / vec3(imageSize(densityTex));


    float density = fract(sin(dot(nPos, vec3(12.9898, 78.233, 54.53))) * 43758.5453123)/10.0;

    imageStore(densityTex, pos, vec4(density));


}

